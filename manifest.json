{
	"manifest_version": 2,
	"name": "Splitwitter",
	"version": "0.1",
	
	"default_locale": "en",
	"description": "This extension will automaticly split up your Tweets and Tweet them.",
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	
	"page_action": {
		"default_icon": {
			"19": "img/icon19.png",
			"38": "img/icon38.png"
		},
		
		"default_title": "Splitwitter",
		"default_popup": "popup.html"
	},
	
	"author": "Maarten Paauw & Owain van Brakel",
	"automation": "", // What's this?
	
	"background": {
		"scripts": ["background.js"],
		"page": "background.html"
	},

}
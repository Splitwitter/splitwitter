{
    "manifest_version": 2,

    "name": "Splitwitter",
    "description": "This extension will automaticly split up your Tweets and Tweet them.",
    "version": "0.0.1",
    "author": "Maarten Paauw & Owain van Brakel",

    "options_page": "html/options.html",

    "icons": {
        "16": "img/icon16.png",
        "19": "img/icon19.png",
        "36": "img/icon19.png",
        "48": "img/icon48.png",
       "128": "img/icon128.png"
    },

    "page_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "19": "img/icon19.png",
            "36": "img/icon19.png",
            "48": "img/icon48.png",
           "128": "img/icon128.png"
        },
        "default_title": "Splitwitter",
        "default_popup": "html/options.html"
    },

    "background": {
        "scripts": ["js/splitwitter-background.js"]
    },

    "content_scripts": [{
        "matches": [
            "*://twitter.com/*",
            "*://*.twitter.com/*"
        ],
        "js": ["js/jquery-2.1.1.min.js", "js/splitwitter-content.js"]
    }],

    "permissions" : [
        "tabs",
        "storage"
    ]
}